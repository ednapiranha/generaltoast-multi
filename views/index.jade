extend layout

block content
  .container
    .inner-container
      .content-container
        h1 General Goods
        p.micro A pod of microblogs.
        .messages
          for user in users
            article.article
              ul.links
                a(class='image', href='/#{user.username}')
                  img(src='#{user.avatar}')
  if page === 'post'
    .container.last
      .inner-container
        .content-container
          h2 Subscriptions
          .subscriptions
