extend layout

block content
  .container
    .inner-container
      .form
        h1 Add

        form(method='post', action='/subscription/add')
          input(type='text', name='url', placeholder='url')
          button(type='submit') Subscribe

      .form
        h1 Current Subscriptions

        ul.manage
          for sub in subscriptions
            li
              a(href='#{sub}')= sub
              button(data-url='#{sub}', data-action='delete-subscription') Unsubscribe
